{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "no-empty-pattern":"off",
        "prefer-const":"off",
        "no-console":"error",
        "semi":"error",
        "lines-between-class-members":["warn","always"],
        "array-callback-return":"warn",
        "func-call-spacing":["warn","never"],
        "require-await":"error",
        "arrow-spacing": ["warn", { "before": true, "after": true }]
    }
}
